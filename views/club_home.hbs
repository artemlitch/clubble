<link href="css/clubpage.css" rel="stylesheet">
<div class="container club-body ">
    <div class="intro-header">
        <div class="container">
           <div class="row">
                <div class="col-lg-12">
                    <div class="club-header">
                        <h1>{{name}}</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-6 club-about-well">
        <div class="well">
            <h4>About {{name}}</h4>
            <p>{{description}}</p>
        </div>
        <div class="well">
            <h4>Contact Info</h4>
            <ul class="list-unstyled">
                {{#if email}}
                <li>email: <a href='mailto:{{email}}'>{{email}}</a>
                </li>
                {{/if}}
                {{#if facebook}}
                <li><a href={{facebook}}>Facebook Link</a>
                </li>
                {{/if}}
                {{#if twitter}}
                <li><a href={{twitter}}>Twitter Link</a>
                </li>
                {{/if}}
                {{#if youtube}}
                <li><a href={{youtube}}>Youtube Link</a>
                </li>
                {{/if}}
            </ul>
        </div>
    </div>
    <div class="col-sm-6 club-about-well">
        <div class="well">
            <h4>Upcoming Events</h4>
        </div>
    </div>
</div>
{{# if editable}}
<div class="container">
    <button class="btn btn-primary" type="button" onclick="edit()">Edit</button>
</div>
<script>
    function edit() {
        window.location.href = window.location.pathname+"?"+$.param({'edit':'true'});
    }
</script>
{{/if}}
