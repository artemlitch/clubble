<!-- Header -->
<link href="/css/main-page.css" rel="stylesheet">
<a name="about"></a>
<div class="intro-header">
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <div class="intro-message">
                    <h1>Clubble</h1>
                    <div class="front-page-search">
                      <input type="text" class="front-page-search-input" placeholder="Search for: {{search_club}}" autofocus />
                    </div>
                    <ul class="list-inline intro-social-buttons">
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4 main-page-col">
                <div class="well main-page-well">
                    <h4>New Clubs</h4>
                    {{#each new_clubs}}
                        <div class="well club-well clickable">
                            <a href="/{{this.clubLink}}"></a>
                            <h5>{{this.name}}</h5>
                        </div>
                    {{/each}}
                </div>
            </div>
            <div class="col-sm-4 main-page-col">
                <div class="well main-page-well">
                    <h4>Popular Clubs</h4>
                    {{#each popular_clubs}}
                        <div class="well club-well clickable">
                            <a href="/{{this.clubLink}}"></a>
                            <h5>{{this.name}}</h5>
                        </div>
                    {{/each}}
                </div>
            </div>
            <div class="col-sm-4 main-page-col">
                <div class="well main-page-well">
                    <h4>My Clubs</h4>
                    {{#each my_clubs}}
                        <div class="well club-well clickable">
                            <a href="/{{this.clubLink}}"></a>
                            <h5>{{this.name}}</h5>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
    <!-- /.container -->

</div>
